<Window x:Class="Darwin.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Darwin.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Hello"></Button>
        </StackPanel>
        <DataGrid x:Name="DatabaseGrid" AutoGenerateColumns="False">
            <DataGridTextColumn Header="IDCode" Binding="{Binding IDCode}" />
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
        </DataGrid>
    </Grid>
</Window>

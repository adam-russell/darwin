                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Name="StatusBarMessage" />
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                    --><!--<TextBlock FontFamily="{StaticResource FontAwesome}" HorizontalAlignment="Center" VerticalAlignment="Center">&#xf03e;</TextBlock>--><!--
                    <Slider Width="180" Orientation="Horizontal" VerticalAlignment="Center" Minimum="-4" Maximum="4" x:Name="ZoomSlider"/>
                    --><!--<TextBlock FontFamily="{StaticResource FontAwesome}" FontSize="22" VerticalAlignment="Center">&#xf03e;</TextBlock>--><!--
                </StackPanel>
            </StatusBarItem>
            --><!--<StatusBarItem Grid.Column="2">
                <TextBlock Foreground="DarkGray" FontFamily="Segoe MDL2 Assets" Text="&#xE788;" FontSize="24" VerticalAlignment="Bottom" Margin="0,0,3,0"/>
            </StatusBarItem>--><!--
        </StatusBar>-->
    </Grid>
</UserControl>
